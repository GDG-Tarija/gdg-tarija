---
import { Image } from "astro:assets";
import Logo from "./../../assets/devfest2024/svg/LOGO_DEVFEST.svg";
import Logo2 from "./../../assets/devfest2024/svg/LOGO_DEVFEST_DESK.svg";
import MenuList from "../../data/devfest/menuList.json";
import Logo_Primary from "./../../assets/devfest/logo_devfest_2025.svg";
import Logo_Secondary from "./../../assets/devfest/logo_devfest.svg";
---

<header
  class="bg-[#F0F0F0] top-0 start-0 w-full fixed z-40"
>
  <nav class="flex flex-wrap justify-between items-center py-2 lg:py-4 px-6 md:px-10">
    <div class="h-12 flex items-center">
      <Image class="w-48 md:hidden" src={Logo_Secondary} alt="Logo DevFest" />
      <Image class="w-60 hidden md:flex lg:w-80" src={Logo_Primary} alt="Logo DevFest 2025" />
    </div>
    <div
      id="menu-button"
      class="text-Gray-900 text-4xl font-bold md:hidden cursor-pointer"
    >
      &equiv;
    </div>
    
    <div
      id="menu-open"
      class="items-center text-center w-full hidden md:flex md:w-auto animate-fade-down animate-duration-500"
    >
    <ul
    class="font-medium text-sm lg:text-lg flex flex-col pt-7 md:flex-row md:pt-0 gap-4 md:gap-6"
  >
    {MenuList.map((menu) => (
      <li>
        <a
          href={menu.href}
          class={`px-4 py-1 rounded-full inline-flex justify-center items-center text-center transition duration-500 hover:scale-110 ${menu.color}`}
        >
          {menu.title}
        </a>
      </li>
    ))}
  </ul>
    </div>
  </nav>
</header>

<script>
  const button = document.querySelector("#menu-button")!;
  const menuOpen = document.querySelector("#menu-open")!;
  button.addEventListener("click", () => {
    menuOpen.classList.toggle("hidden");
  });

  window.addEventListener("scroll", () => {
    if (!menuOpen.classList.contains("hidden")) {
      menuOpen.classList.add("hidden");
    }
  });
</script>
