---
import PackageCard from "./PackageCard.astro";

import packages from "./paquetes.json"
---

<section id="paquetes" class="bg-[#F0F0F0]">
<div class="flex flex-col items-center container mx-auto py-10 md:py-20">
  <h2 class="text-[2rem] font-bold mb-8">Adquiere tu paquete</h2>
  <div class="grid grid-cols-1 md:grid-cols-3 w-full max-w-[1200px] justify-center items-center gap-8 px-4 md:px-0">
    <div
      class="h-full w-full border-2 bg-[url('/img/devfest2025/bg_pack.png')] bg-cover bg-center bg-[#C3ECF6] rounded-2xl p-6 flex flex-col max-w-[400px] mx-auto min-h-[380px]">
      <h1 class='text-2xl font-bold text-[#4285F4]''>Paquete <br /> Byte Salvaje</h1>
      <div class='relative h-full'>
        <div class='absolute bottom-0 right-0 w-full grid grid-cols-3'>
          <div class='col-span-1'></div>
          <img class='col-span-2' src={'/img/devfest2025/package_1.png'} alt='Logo Byte Salvaje' />
        </div>
        <div class='absolute z-10 h-full flex flex-col top-0 left-0'>
          <ul class='space-y-1 mt-4 flex-grow'>
            <li>2 Stickers</li>
            <li>2 Pines</li>
            <li>1 Lápiz ecológico</li>
            <li>1 Cuaderno</li>
          </ul>
        </div>
      </div>
      <div class='flex justify-start'>
        <div class='py-2 px-4 bg-[#4285F4] rounded-full border-black border-2 text-xl font-medium'>
          <span class="text-white">Bs. 45</span>
        </div>
      </div>
    </div>
    <div
      class="h-full w-full border-2 bg-[url('/img/devfest2025/bg_pack.png')] bg-cover bg-center bg-[#CCF6C5] rounded-2xl p-6 flex flex-col max-w-[400px] mx-auto min-h-[380px]">
      <h1 class='text-2xl font-bold text-[#34A853]''>Paquete <br /> Kernel Rebelde</h1>
      <div class='relative h-full'>
        <div class='absolute bottom-0 right-0 w-full grid grid-cols-3'>
          <div class='col-span-1'></div>
          <img class='col-span-2' src={'/img/devfest2025/package_2.png'} alt='Logo Byte Salvaje' />
        </div>
        <div class='absolute z-10 h-full flex flex-col top-0 left-0'>
          <ul class='space-y-1 mt-4 flex-grow'>
            <li>2 Stickers</li>
            <li>2 Pines</li>
            <li>1 Lápiz ecológico</li>
            <li>1 Cuaderno</li>
            <li>1 Portalápiz</li>
          </ul>
        </div>
      </div>
      <div class='flex justify-start'>
        <div class='py-2 px-4 bg-[#34A853] rounded-full border-black border-2 text-xl font-medium'>
          <span class="text-white">Bs. 70</span>
        </div>
      </div>
    </div>
    <div
      class="h-full w-full border-2 bg-[url('/img/devfest2025/bg_pack.png')] bg-cover bg-center bg-[#ffeab1] rounded-2xl p-6 flex flex-col max-w-[400px] mx-auto min-h-[380px]">
      <h1 class='text-2xl font-bold text-[#F9AB00]''>Paquete <br /> Overclock Extremo</h1>
      <div class='relative h-full'>
        <div class='absolute bottom-0 right-0 w-full grid grid-cols-3'>
          <div class='col-span-1'></div>
          <img class='col-span-2' src={'/img/devfest2025/package_3.png'} alt='Logo Byte Salvaje' />
        </div>
        <div class='absolute z-10 h-full flex flex-col top-0 left-0'>
          <ul class='space-y-1 mt-4 flex-grow'>
            <li>2 Stickers</li>
            <li>2 Pines</li>
            <li>1 Lápiz ecológico</li>
            <li>1 Cuaderno</li>
            <li>1 Portalápiz</li>
            <li>1 Pechera</li>
          </ul>
        </div>
      </div>
      <div class='flex justify-start'>
        <div class='py-2 px-4 bg-[#F9AB00] rounded-full border-black border-2 text-xl font-medium'>
          <span class="text-white">Bs. 120</span>
        </div>
      </div>
    </div>
  </div>
  <a href="https://forms.gle/jXhjJ2P39KVACdpW9" target="_blank" class="bg-[#4285F4] text-white px-16 py-4 rounded-full mt-10 hover:scale-150 transition-all duration-200"
    >Adquiere tu paquete</a
  >
</div></section>
