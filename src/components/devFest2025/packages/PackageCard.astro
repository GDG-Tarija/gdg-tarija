---
import { Image } from 'astro:assets';
import type { ImageMetadata } from 'astro';

interface Props {
    name: string;
    price: string;
    features: string[];
    image: ImageMetadata;
    bgColor: string;
    textColor: string;
}

const { name, price, features, image, bgColor, textColor } = Astro.props;
---

<div class="h-full border-2 border-cyan-400 rounded-2xl relative p-4 flex flex-col">
    <div class="absolute top-0 right-0 w-full h-full grid grid-cols-3">
        <div class="col-span-1"></div>
        <Image class="col-span-2" src={image} alt={`Logo ${name}`} />
    </div>
    <div class="relative z-10 h-full flex flex-col">
        <h1 class=`text-2xl font-bold ${textColor}`>Paquete <br> {name}</h1>
        <ul class="space-y-1 mt-4 flex-grow">
            {features.map(feature => (
                <li>{feature}</li>
            ))}
        </ul>

        <div class=`py-2 px-4 ${bgColor} max-w-max mx-auto rounded-full border-blue-800 border-2 text-xl font-medium`>
            Bs. {price}
        </div>
    </div>
</div>
