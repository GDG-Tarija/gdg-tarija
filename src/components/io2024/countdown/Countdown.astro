---
interface Props {
  targetDate: string;
}

const { targetDate } = Astro.props;
---

<section class="py-16 bg-[#E4F3FC] border-y-2 border-[#E8EAEB]">
  <div class="max-w-6xl mx-auto px-6">
    <div
      id="countdown"
      class="text-center flex items-center justify-center"
    >
      <div class="grid grid-cols-2 md:grid-cols-4 gap-4 md:gap-8">
        <div class="bg-white rounded-2xl p-4 md:p-6 shadow-lg">
          <div class="flex flex-col items-center">
            <span id="days" class="text-2xl md:text-4xl lg:text-6xl font-bold text-blue-600">00</span>
            <span class="text-sm md:text-lg lg:text-xl text-gray-600 mt-2">Días</span>
          </div>
        </div>
        <div class="bg-white rounded-2xl p-4 md:p-6 shadow-lg">
          <div class="flex flex-col items-center">
            <span id="hours" class="text-2xl md:text-4xl lg:text-6xl font-bold text-blue-600">00</span>
            <span class="text-sm md:text-lg lg:text-xl text-gray-600 mt-2">Horas</span>
          </div>
        </div>
        <div class="bg-white rounded-2xl p-4 md:p-6 shadow-lg">
          <div class="flex flex-col items-center">
            <span id="minutes" class="text-2xl md:text-4xl lg:text-6xl font-bold text-blue-600">00</span>
            <span class="text-sm md:text-lg lg:text-xl text-gray-600 mt-2">Minutos</span>
          </div>
        </div>
        <div class="bg-white rounded-2xl p-4 md:p-6 shadow-lg">
          <div class="flex flex-col items-center">
            <span id="seconds" class="text-2xl md:text-4xl lg:text-6xl font-bold text-blue-600">00</span>
            <span class="text-sm md:text-lg lg:text-xl text-gray-600 mt-2">Segundos</span>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<script is:inline define:vars={{ targetDate }}>
  document.addEventListener("DOMContentLoaded", function () {
    const endDate = new Date(targetDate).getTime();

    const countdown = () => {
      const now = new Date().getTime();
      const distance = endDate - now;

      const days = Math.floor(distance / (1000 * 60 * 60 * 24));
      const hours = Math.floor(
        (distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60)
      );
      const minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
      const seconds = Math.floor((distance % (1000 * 60)) / 1000);

      document.getElementById("days").innerText = days;
      document.getElementById("hours").innerText = hours;
      document.getElementById("minutes").innerText = minutes;
      document.getElementById("seconds").innerText = seconds;

      if (distance < 0) {
        clearInterval(interval);
        document.getElementById("countdown").innerHTML = "¡El evento ha comenzado!";
      }
    };

    const interval = setInterval(countdown, 1000);
    countdown();
  });
</script>
