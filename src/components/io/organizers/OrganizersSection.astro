---
// Componente para mostrar los logos de los organizadores del evento
---

<section class="py-16 bg-white">
  <div class="max-w-6xl mx-auto px-6">
    <!-- TÃ­tulo -->
    <div
      class="text-center mb-12 animate-fade-up animate-duration-[1000ms] animate-ease-out"
    >
      <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
        Organizadores del Evento
      </h2>
    </div>

    <!-- Logos de organizadores -->
    <div
      class="flex flex-col md:flex-row items-center justify-center gap-12 md:gap-16 animate-fade-up animate-duration-[1000ms] animate-delay-[200ms] animate-ease-out"
    >
      <!-- Logo 1 - GDG Tarija -->
      <a
        href="https://gdgtarija.com"
        target="_blank"
        rel="noopener noreferrer"
        class="group flex flex-col items-center space-y-4 hover:scale-105 transition-transform duration-300"
      >
        <div
          class="bg-gray-50 p-8 rounded-2xl border border-gray-200 shadow-sm hover:shadow-lg transition-shadow duration-300"
        >
          <img
            src="https://res.cloudinary.com/dopkch3x9/image/upload/v1753129644/logoGDGTarija_lyzyzo.svg"
            alt="Google Developer Group Tarija"
            class="h-32 w-auto object-contain transition-opacity duration-300"
          />
        </div>
      </a>

      <!-- Logo 2 - Centro de Sistemas -->
      <a
        href="https://www.instagram.com/sistemas_ucbtja/"
        target="_blank"
        rel="noopener noreferrer"
        class="group flex flex-col items-center space-y-4 hover:scale-105 transition-transform duration-300"
      >
        <div
          class="bg-gray-50 p-8 rounded-2xl border border-gray-200 shadow-sm hover:shadow-lg transition-shadow duration-300"
        >
          <img
            src="https://res.cloudinary.com/dopkch3x9/image/upload/v1753129687/logo-centro-sistemas_qfoolj.png"
            alt="Centro de Estudiantes de Ingenieria de Sistemas"
            class="h-32 w-auto object-contain transition-opacity duration-300"
          />
        </div>
      </a>
    </div>
  </div>
</section>
